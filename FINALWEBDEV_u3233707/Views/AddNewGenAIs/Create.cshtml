@model FINALWEBDEV_u3233707.Models.AddNewGenAI

@{
    ViewData["Title"] = "Create";
}
<div class=" container-fluid background1">
    <h1 id="heading1">Add new GenAI website</h1>


    <hr />

    <div class="row justify-content-center mx-auto">
        <div class="genaisites">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GenAIName" class="control-label text-white"></label>
                    <input asp-for="GenAIName" class="form-control" class="inputsize" />
                    <span asp-validation-for="GenAIName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Summary" class="control-label text-white"></label>
                    <textarea asp-for="Summary" class="form-control" rows="5" class="inputsize"></textarea>
                    <span asp-validation-for="Summary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label text-white">Upload image file</label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

                <div>
                    <a class="text-white" asp-action="Index">Back to List</a>
                </div>



            </form>
        </div>

    </div>

    <div class="bottompadding"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
